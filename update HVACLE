  <script>
    function calculateBTU() {
      const area = parseFloat(document.getElementById('area').value);
      const height = parseFloat(document.getElementById('height').value);
      const occupants = parseInt(document.getElementById('occupants').value);
      const windows = parseInt(document.getElementById('windows').value);
      const climate = document.getElementById('climate').value;
      const insulation = document.getElementById('insulation').value;

      if (isNaN(area) || isNaN(height)) {
        document.getElementById('result').innerText = "Please enter valid numbers.";
        return;
      }

      let volume = area * height;
      let btu = volume * 6;

      if (climate === 'hot') btu *= 1.2;
      if (climate === 'cold') btu *= 0.9;

      if (insulation === 'poor') btu *= 1.15;
      if (insulation === 'good') btu *= 0.9;

      btu += occupants * 600;
      btu += windows * 1000;

      const tons = btu / 12000;
      const suggestion = suggestRheemModel(btu);

      document.getElementById('result').innerText =
        `Estimated Load:
${Math.round(btu)} BTU/hr
(${tons.toFixed(1)} tons)

${suggestion}`;
    }

    function suggestRheemModel(btu) {
      const tons = btu / 12000;
      const options = [
        { model: "RA1624AJ1NA", tonnage: 2.0, seer: 16, type: "R-454B", line: "Classic" },
        { model: "RA1630AJ1NA", tonnage: 2.5, seer: 16, type: "R-454B", line: "Classic" },
        { model: "RA1636AJ1NA", tonnage: 3.0, seer: 16, type: "R-454B", line: "Classic" },
        { model: "RA1642AJ1NA", tonnage: 3.5, seer: 16, type: "R-454B", line: "Classic" },
        { model: "RA1648AJ1NA", tonnage: 4.0, seer: 16, type: "R-454B", line: "Classic" },
        { model: "RA1660AJ1NA", tonnage: 5.0, seer: 16, type: "R-454B", line: "Classic" },
        { model: "UA1624AJ2NA", tonnage: 2.0, seer: 17, type: "R-454B", line: "Prestige" },
        { model: "UA1630AJ2NA", tonnage: 2.5, seer: 17, type: "R-454B", line: "Prestige" },
        { model: "UA1636AJ2NA", tonnage: 3.0, seer: 17, type: "R-454B", line: "Prestige" },
        { model: "UA1642AJ2NA", tonnage: 3.5, seer: 17, type: "R-454B", line: "Prestige" },
        { model: "UA1648AJ2NA", tonnage: 4.0, seer: 17, type: "R-454B", line: "Prestige" },
        { model: "UA1660AJ2NA", tonnage: 5.0, seer: 17, type: "R-454B", line: "Prestige" }
      ];
      const match = options.reduce((prev, curr) =>
        Math.abs(curr.tonnage - tons) < Math.abs(prev.tonnage - tons) ? curr : prev
      );
      return `Suggested Rheem Model: ${match.model} (${match.tonnage.toFixed(1)}‚Äëton)
SEER: ${match.seer}, Refrigerant: ${match.type}, Series: ${match.line}`;
    }
  </script>
